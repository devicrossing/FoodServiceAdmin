  #content.container
    form#contact_form.well.form-horizontal(action=' ' method='post')
      fieldset
        // Form Name
        legend Renseignement consernant FOOD SERVICE
        // Text input
        .form-group
          label.col-md-4.control-label Username
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='user_name' placeholder= user[0].username type='text')
        // Text input
        // Text input
        .form-group
          label.col-md-4.control-label Prénom
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='first_name' placeholder= user[0].firstname type='text')
        // Text input
        .form-group
          label.col-md-4.control-label Nom
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(name='last_name' placeholder= user[0].lastname type='text')
        // Text input
        .form-group
          label.col-md-4.control-label E-Mail
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-envelope
              input.form-control(name='email' placeholder= user[0].username type='text')
        // Text input
        .form-group
          label.col-md-4.control-label Site web ou nom de domaine
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-globe
              input.form-control(name='website' placeholder= user[0].web type='text')
        // radio checks
        .form-group
          label.col-md-4.control-label Do you have hosting?
          .col-md-4
            .radio
              label
                if (user[0].hosting)
                  input(type='radio' checked  name='hosting' value='yes')
                  |  Yes
                else
                  input(type='radio'  name='hosting' value='yes')
                  |  Yes
            .radio
              label
                if (user[0].hosting)
                  input(type='radio' name='hosting' value='no')
                  |  No
                else
                  input(type='radio' checked name='hosting' value='no')
                  |  No
        // Text area
        .form-group
          label.col-md-4.control-label Description de votre d'établissement
          .col-md-4.inputGroupContainer
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-pencil
              textarea.form-control(name='comment' placeholder = "Food Service description")
        // Button
        .form-group
          label.col-md-4.control-label
          .col-md-4
            button.btn.btn-warning(type='submit')
